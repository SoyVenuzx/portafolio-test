---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import GitHub from '../icons/GitHub.astro';
import Linkedin from '../icons/LinkedIn.astro';
import WhatsApp from '../icons/WhatsApp.astro';
import Gmail from '../icons/Gmail.astro';

const socialLinks = [
  {
    href: 'https://github.com/SoyVenuzx',
    icon: GitHub,
    title: 'GitHub',
  },
  {
    href: 'https://linkedin.com/in/shouyt9',
    icon: Linkedin,
    title: 'LinkedIn',
  },
  {
    href: 'https://wa.me/50588888888',
    icon: WhatsApp,
    title: 'WhatsApp',
  },
  {
    href: 'https://mail.google.com/mail/u/0/?fs=1&to=anto@example.com&su=Subject&body=Body&bcc=other@example.com',
    icon: Gmail,
    title: 'Gmail',
  },
];
---

<Layout
  title='Portafolio - Anto Dev | Home Page'
  description='Welcome to my personal portfolio website. Explore my projects, skills, and get in touch with me.'
>
  <main>
    <section class='w-full lg:w-[740px] mx-auto py-20'>
      <img
        class='rounded-full w-20 h-20 mb-5'
        src='https://avatars.githubusercontent.com/u/77865264?v=4'
        alt='Logo'
      />

      <h1 class='font-bold text-5xl flex flex-row gap-x-3 pb-3'>
        Hey, I'm <span class='font-bold'>Anto</span>
        <a
          href='https://linkedin.com/in/shouyt9'
          target='_blank'
          rel='noopener'
          class='flex justify-center items-center'
        >
          <Badge>Available for hire</Badge>
        </a>
      </h1>
      <h2 class='text-2xl opacity-80 text-wrap'>
        <span>I'm a web developer,</span>
        <span class='text-yellow-200/90'>
          specializing in front-end technologies. Based in Managua, Nicaragua.</span
        >
        <span class='opacity-90'
          >I specialize in building responsive and accessible web applications.</span
        >
      </h2>

      <ul class='flex gap-4 mt-6'>
        {
          socialLinks.map((link) => (
            <li class='flex items-center gap-3 group'>
              <a href={link.href} target='_blank' rel='noopener'>
                <link.icon class='w-5 h-5' />
              </a>
              <span
                class='max-w-0 overflow-hidden opacity-0 translate-x-2 group-hover:max-w-xs group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-500 whitespace-nowrap'
                style='display: inline-block;'
              >
                {link.title}
              </span>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</Layout>
